<div
  class="tab-pane fade show active"
  id="show-item"
  role="tabpanel"
  aria-labelledby="home-tab">
  <div class="card shadow mb-4 mt-2">
    <div class="card-body">
      <div class="table-responsive">
        <table
          class="table table-bordered"
          id="dataTable"
          width="100%"
          cellspacing="0">
          <thead>
            <tr>
              <th>No</th>
              <th>Title</th>
              <th>Price</th>
              <th>Country</th>
              <th>City</th>
              <th>Action</th>
            </tr>
            <tbody>
              <% for(let i = 0; i<item.length; i++) {%>
                <tr>
                 <td><%= i+1 %></td>
                 <td><%= item[i].title %></td>
                 <td><%= item[i].price %></td>
                 <td><%= item[i].country %></td>
                 <td><%= item[i].city %></td>
                 <td>
                  <form action="/admin/item/<%= item[i].id %>/delete?_method=DELETE" method="POST">
                    <a href="/admin/item/show-image/<%= item[i].id %>" class="btn btn-circle btn-info btn-sm">
                      <i class="fas fa-image"></i>
                    </a>
                    <a href="/admin/item/<%= item[i].id %>" type="button" class="btn-warning btn-circle btn-sm">
                       <i class="fas fa-edit"></i>
                     </a>
                     <!-- delete -->
                     <button  type="submit"  class="btn-danger btn-circle btn-sm">
                       <i class="fas fa-trash"></i>
                     </button>
                     <a href="/admin/item/show-detail-item/<%= item[i].id %>" class="btn btn-circle btn-success btn-sm">
                      <i class="fas fa-plus"></i>
                    </a>
                   </form>
                   <!-- edit -->
                 </td>
                </tr>
               <%} %>
            </tbody>
          </thead>
        </table>
      </div>
    </div>
  </div>
</div>
